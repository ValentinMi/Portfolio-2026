---
import { getCollection, render } from "astro:content";

const experiences = await getCollection("experiences");
const sortedExperiences = experiences.sort(
  (a, b) => a.data.order - b.data.order,
);
---

<section class="experiences" id="experiences">
  <div class="container">
    <h2 class="section-title">Exp√©riences</h2>

    <div class="timeline">
      {
        sortedExperiences.map(async (exp) => {
          const { Content } = await render(exp);
          return (
            <article class="timeline-item">
              <div class="timeline-marker" />
              <div class="timeline-content">
                <div class="timeline-header">
                  <h3 class="company">{exp.data.company}</h3>
                  <span class="period">{exp.data.period}</span>
                </div>
                <p class="position">{exp.data.position}</p>
                <div class="description">
                  <Content />
                </div>
                <div class="technologies">
                  {exp.data.technologies.map((tech) => (
                    <span class="tech-tag">{tech}</span>
                  ))}
                </div>
              </div>
            </article>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  .experiences {
    background: var(--color-bg);
    position: relative;
    overflow: hidden;
  }

  .experiences::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(50, 224, 196, 0.05),
      transparent 60%
    );
    pointer-events: none;
  }

  .timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding-left: 2rem;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-primary);
    box-shadow: 0 0 10px rgba(50, 224, 196, 0.5);
  }

  .timeline-item {
    position: relative;
    padding-bottom: 3.5rem;
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-marker {
    position: absolute;
    left: -2rem;
    top: 0;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--color-bg);
    border: 2px solid var(--color-primary);
    transform: translateX(-50%);
    box-shadow: 0 0 10px var(--color-primary);
    z-index: 2;
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-marker {
    background: var(--color-primary);
    box-shadow:
      0 0 15px var(--color-primary),
      0 0 30px var(--color-primary);
  }

  .timeline-content {
    background: rgba(14, 14, 18, 0.8);
    backdrop-filter: blur(5px);
    border-radius: 0.5rem;
    padding: 1.5rem;
    border: 1px solid rgba(45, 226, 230, 0.1);
    border-left: 2px solid rgba(45, 226, 230, 0.1);
    transition: all 0.1s ease-out;
    clip-path: polygon(
      0 0,
      100% 0,
      100% calc(100% - 15px),
      calc(100% - 15px) 100%,
      0 100%
    );
    position: relative;
  }

  .timeline-content:hover {
    border-color: rgba(45, 226, 230, 0.3);
    border-left: 4px solid var(--color-primary);
    background: rgba(20, 20, 25, 0.95);
    transform: translateX(2px);
  }

  .timeline-content:hover .company {
    color: var(--color-primary);
    text-shadow: none;
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .company {
    font-size: 1.25rem;
    color: var(--color-text);
    margin: 0;
    font-weight: 700;
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
  }

  .period {
    color: var(--color-primary-light);
    font-size: 0.8rem;
    font-weight: 600;
    background: rgba(50, 224, 196, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 0;
    border: 1px solid rgba(50, 224, 196, 0.3);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .position {
    color: var(--color-secondary);
    font-weight: 600;
    margin: 0 0 1rem;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .description {
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .description :global(p) {
    margin: 0;
  }

  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    background: transparent;
    color: var(--color-text-muted);
    padding: 0.25rem 0.75rem;
    border-radius: 2px;
    font-size: 0.75rem;
    border: 1px solid var(--color-border);
    font-family: monospace;
    transition: all 0.3s ease;
  }

  .tech-tag:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    box-shadow: 0 0 5px rgba(50, 224, 196, 0.2);
  }

  @media (max-width: 600px) {
    .timeline {
      padding-left: 1.5rem;
    }

    .timeline-marker {
      left: -1.5rem;
      width: 12px;
      height: 12px;
    }

    .timeline-header {
      flex-direction: column;
    }
  }
</style>
